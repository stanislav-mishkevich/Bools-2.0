/* Gate Long Descriptions */
"gate.longDesc.input" = "Input — sets a logical value (on/off). Used as a signal source.";
"gate.longDesc.clock" = "Clock Generator — automatically generates periodic pulses by switching between 0 and 1 every second. Perfect for creating blinking lights, repeating sounds, or any cyclic circuit. Works like a metronome for digital circuits.";
"gate.longDesc.output" = "Output — displays the current logical signal at this pin. Usually used to display the result.";
"gate.longDesc.and" = "Logical AND — outputs 1 only if all inputs are 1.";
"gate.longDesc.or" = "Logical OR — outputs 1 if at least one input is 1.";
"gate.longDesc.not" = "Inverter (NOT) — outputs the opposite value of the input.";
"gate.longDesc.not_b" = "Inverter B (NOT B) — outputs the opposite value of input B.";
"gate.longDesc.xor" = "Exclusive OR — outputs 1 if exactly one of the inputs is 1.";
"gate.longDesc.xnor" = "Equivalence (XNOR) — outputs 1 if inputs are equal (both 0 or both 1).";
"gate.longDesc.nand" = "Negation AND (NAND) — gives 0 only if all inputs are 1; otherwise 1.";
"gate.longDesc.nor" = "Negation OR (NOR) — gives 1 only if all inputs are 0; otherwise 0.";
"gate.longDesc.a_and_not_b" = "A AND NOT B — outputs 1 only if A=1 and B=0.";
"gate.longDesc.not_a_and_b" = "NOT A AND B — outputs 1 only if A=0 and B=1.";
"gate.longDesc.impl_ab" = "Implication A→B — logical implication. False only if A=1 and B=0.";
"gate.longDesc.impl_ba" = "Implication B→A — logical implication. False only if B=1 and A=0.";
"gate.longDesc.proj_a" = "Projection A — simply passes the value of input A to the output.";
"gate.longDesc.proj_b" = "Projection B — simply passes the value of input B to the output.";
"gate.longDesc.const0" = "Constant 0 (FALSE) — always outputs 0 regardless of any conditions.";
"gate.longDesc.const1" = "Constant 1 (TRUE) — always outputs 1 regardless of any conditions.";
"gate.longDesc.button" = "Button — a mechanical element for momentary circuit closure. Contacts close when pressed allowing current flow (signal 1), open when released (signal 0). Used for temporary device activation. Visualized in red color when pressed.";
"gate.longDesc.switch" = "Switch — a mechanical element for fixed circuit closure/opening. Maintains its position (ON/OFF) until next toggle. When on, passes signal; when off, blocks it. Used for permanent power control.";
"gate.longDesc.led" = "LED (Light-Emitting Diode) — a semiconductor device that emits light when electric current passes through it. Glows green when logic 1 is applied, remains dark at 0. Has low power consumption and used as active state indicator.";
"gate.longDesc.bulb" = "Light Bulb — a classic light source based on tungsten filament heating. Glows yellow-orange when voltage is applied, creates characteristic glow around it. Visual indicator of voltage presence in circuit with realistic glow effect.";
"gate.longDesc.relay" = "Relay — an electromagnetic device for circuit switching. Consists of a control coil (two contacts: + and -) and switching contacts. When voltage is applied to the coil, a magnetic field is created that switches the contacts:\n• COM (common) — connected to the signal source\n• NO (normally open) — closes when the coil is activated\n• NC (normally closed) — opens when the coil is activated\nUsed to control high-power circuits with weak signals, for protection and switching between different sources.";
"gate.longDesc.buzzer" = "Buzzer — an electroacoustic device for sound signaling. Activates when voltage is applied, emits characteristic sound. Red indicator in center shows activity, expanding waves visualize sound propagation.";
"gate.longDesc.resistor" = "Resistor — a passive electronic component limiting current in circuit. Has color bands (orange, blue, red) for value designation. Converts electrical energy to heat. Passes signal unchanged, but in reality reduces voltage.";
"gate.longDesc.capacitor" = "Capacitor — a passive electronic component of two conducting plates separated by dielectric. Capable of storing and releasing electric charge. Used for filtering, voltage ripple smoothing and temporary energy storage. Passes signal through.";
"gate.longDesc.battery" = "Battery — a power source providing constant voltage output. Always outputs logical 1 (active signal). Has two pins: positive (+) and negative/ground (-). Used to power circuits and provide reference voltages in logical circuits.";
"gate.longDesc.display8bit" = "8-bit Display — visualizes an 8-bit binary number as a decimal value (0-255). Inputs: B0-B7 for bits (B0 is least significant), + and - for power supply. Requires both + and - inputs to be connected (logic 1 for +, logic 0 for -). Calculates value as: B0×1 + B1×2 + B2×4 + ... + B7×128. Perfect for displaying counter values, arithmetic results, or any 8-bit data.";
"gate.longDesc.bjt_npn" = "BJT NPN Transistor — a three-terminal bipolar transistor for signal amplification and switching. Pins: Base (B) - control input, Collector (C) - input signal, Emitter (E) - output. When base receives signal 1, transistor conducts and passes signal from collector to emitter.";
"gate.longDesc.bjt_pnp" = "BJT PNP Transistor — a three-terminal bipolar transistor with inverted logic. Pins: Base (B) - control input, Collector (C) - input signal, Emitter (E) - output. Conducts when base receives signal 0 (inverted control). Used for switching and amplification in complementary circuits.";
"gate.longDesc.mosfet_n" = "MOSFET N-channel — a field-effect transistor for fast switching and amplification. Pins: Gate (G) - control input, Drain (D) - input signal, Source (S) - output. Conducts when gate receives signal 1. Offers high input impedance and fast switching speed.";
"gate.longDesc.mosfet_p" = "MOSFET P-channel — a field-effect transistor with inverted control logic. Pins: Gate (G) - control input, Drain (D) - input signal, Source (S) - output. Conducts when gate receives signal 0 (inverted control). Used for complementary CMOS logic circuits.";

